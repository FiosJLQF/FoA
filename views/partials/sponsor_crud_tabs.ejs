    <!-- Data preview container (Tab #2) -->
    <div id="tabPreview" class="tabcontent"></div>

    <!-- Form controls -->
    <div><br>
      <% if ( actionRequested === 'addsponsor' ) { %>
        <button class="data-mgmt-button" form="sponsorDataEdit" onclick="return validateData();">Add Sponsor</button>
      <% } %>
      <% if ( sponsorID !== '' && userCanDeleteSponsor ) { %>
        <form form action="/switchboard/sponsordelete?_method=DELETE" method="POST" id="sponsorDataDelete">
          <input type="hidden" id="sponsorIDToDelete" name="sponsorIDToDelete" value="<%- sponsorDetails[0].SponsorID %>">
        </form>
      <% } %>
      <% if ( sponsorID !== '' && userCanUpdateSponsor ) { %>
        <button class="data-mgmt-button" form="sponsorDataEdit" onclick="return validateData();">Save Changes</button>&nbsp;&nbsp;&nbsp;&nbsp;
      <% } %>
      <% if ( sponsorID !== '' && userCanDeleteSponsor ) { %>
        <button class="data-mgmt-button" form="sponsorDataDelete" onclick=" return deleteSponsor();">Delete This Sponsor</button>
      <% } %>
    </div>  <!-- END: Form controls -->

    <br><br>
