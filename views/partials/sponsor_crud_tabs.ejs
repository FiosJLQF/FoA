<script>

  // Show the "Edit" tab by default
  document.getElementById("btnTabEdit").click();

  /////////////////////////////////////////////////////////////////////////////////////////////
  // Load the DDLs options lists
  /////////////////////////////////////////////////////////////////////////////////////////////

  // Load the Sponsor Statuses
  var sponsorStatusRows = <%- JSON.stringify(sponsorStatusCategories.rows) %>;
  loadSelectOptionsList("sponsorStatus", "(Not Selected)", 0, sponsorStatusRows);

  // Load the Sponsor Types
  var sptRows = <%- JSON.stringify(sponsorTypeCategoriesDDL.rows) %>;
  loadSelectOptionsList("sponsorTypes", "(Not Selected)", 0, sptRows);

  /////////////////////////////////////////////////////////////////////////////////////////////
  // Customize the page based on the context ("Add Sponsor" v. "Manage Sponsor")
  /////////////////////////////////////////////////////////////////////////////////////////////
  <% if ( actionRequested === 'addsponsor' ) { %>  // "Add Sponsor"

    // Set the browser tab name (i.e., title)
    document.title = "Future of Aviation - Add Sponsor";
    // Set the page title
    document.getElementById("pageTitle").innerText = "Switchboard - Add Sponsor";
    // Set the instructions
    document.getElementById('sponsorInstructions').innerText = "Add the information for the new Sponsor below, and click 'Add Sponsor'.";

  <% } else if ( sponsorID !== '' ) { %>  // "Read/Update/Delete Sponsor"

    // Set the browser tab name (i.e., title)
    document.title = "Future of Aviation - Manage Sponsor";
    // Set the page title
    document.getElementById("pageTitle").innerText = "Switchboard - Manage Sponsor";
    // Set the instructions
    document.getElementById('sponsorInstructions').innerText = "Edit the entries below, and click 'Save Changes'.";
    // Set the form submittal configuration
    document.getElementById('sponsorDataEdit').action = "/switchboard/sponsorupdate?_method=PUT";
    document.getElementById('sponsorDataEdit').method = "POST";
    // Set the current values for the Sponsor data elements
    document.getElementById('sponsorIDToUpdate').value = "<%- sponsorDetails[0].SponsorID %>";
    document.getElementById('sponsorIsFeatured').checked = <%- sponsorDetails[0].SponsorIsFeatured %>;
    // Select Status Status
    var sponsorStatus = "<%- sponsorDetails[0].SponsorStatusID %>";
    var sponsorStatusArrTrimmed = sponsorStatus.split('|').slice(1, -1);
    var sponsorStatusSelectObject = document.getElementById('sponsorStatus');
    if ( sponsorStatusArrTrimmed.length !== 0 ) {
      sponsorStatusSelectObject.options[0].selected = '';  // Remove the default 'Not Selected' option
      sponsorStatusArrTrimmed.forEach( function(sponsorStatus) {
        for ( i=0; i < sponsorStatusSelectObject.length; i++ ) {
          if ( sponsorStatusSelectObject.options[i].value === sponsorStatus ) {
            sponsorStatusSelectObject.options[i].selected = 'selected';
          }
        }
      });
    };
    document.getElementById('sponsorName').innerHTML = `<%= sponsorDetails[0].SponsorName %>`;
//    document.getElementById('sponsorNamePreview').innerHTML = `<%= sponsorDetails[0].SponsorName %>`;
    document.getElementById('sponsorDescription').innerHTML = `<%= sponsorDetails[0].SponsorDescription %>`;
//    document.getElementById('sponsorDescriptionPreview').innerHTML = `<%= sponsorDetails[0].SponsorDescription %>`;
    document.getElementById('sponsorWebsite').innerHTML = "<%= sponsorDetails[0].SponsorWebsite %>";
//    document.getElementById('sponsorWebsitePreview').innerHTML = "<%= sponsorDetails[0].SponsorWebsite %>";
//    document.getElementById('sponsorWebsitePreview').href = "<%= sponsorDetails[0].SponsorWebsite %>";
    document.getElementById('sponsorLogo').innerHTML = "<%= sponsorDetails[0].SponsorLogo %>";
//    document.getElementById('sponsorLogoPreview').src = "<%= sponsorDetails[0].SponsorLogo %>";
    document.getElementById('sponsorContactFName').innerHTML = "<%= sponsorDetails[0].SponsorContactFName %>";
    document.getElementById('sponsorContactLName').innerHTML = "<%= sponsorDetails[0].SponsorContactLName %>";
    document.getElementById('sponsorContactEmail').innerHTML = "<%= sponsorDetails[0].SponsorContactEmail %>";
    document.getElementById('sponsorContactTelephone').innerHTML = "<%= sponsorDetails[0].SponsorContactTelephone %>";
//    document.getElementById('sponsorContactInfoPreview').innerHTML = formatContactInfo();
    // Select Sponsor Types from the Sponsor's data
    var sponsorTypes = "<%- sponsorDetails[0].SponsorType %>";
    var sponsorTypesArrTrimmed = sponsorTypes.split('|').slice(1, -1);
    var sponsorTypesSelectObject = document.getElementById('sponsorTypes');
    if ( sponsorTypesArrTrimmed.length !== 0 ) {
      sponsorTypesSelectObject.options[0].selected = '';  // Remove the default 'Not Selected' option
      sponsorTypesArrTrimmed.forEach( function(sponsorType) {
        for ( i=0; i < sponsorTypesSelectObject.length; i++ ) {
          if ( sponsorTypesSelectObject.options[i].value === sponsorType ) {
            sponsorTypesSelectObject.options[i].selected = 'selected';
          }
        }
      });
    };

    // Disable the controls if the user is not an FoA Admin
    if ( <%- !userIsDataAdmin %> ) {
      document.getElementById('sponsorStatus').disabled = true;
      document.getElementById('sponsorIsFeatured').disabled = true;
    };

    // Disable the controls (and change the instruction) if the user does not have permission to update Sponsors.
    if ( <%- !userCanUpdateSponsor %> ) {
      document.getElementById('sponsorInstructions').innerText = "Review the entries below.";
      document.getElementById('sponsorIsFeatured').disabled = true;
      document.getElementById('sponsorStatus').disabled = true;
      document.getElementById('sponsorName').disabled = true;
      document.getElementById('sponsorDescription').disabled = true;
      document.getElementById('sponsorWebsite').disabled = true;
      document.getElementById('sponsorLogo').disabled = true;
      document.getElementById('sponsorContactFName').disabled = true;
      document.getElementById('sponsorContactLName').disabled = true;
      document.getElementById('sponsorContactEmail').disabled = true;
      document.getElementById('sponsorContactTelephone').disabled = true;
      document.getElementById('sponsorTypes').disabled = true;
    };

  <% } %>


  /////////////////////////////////////////////////////////////////////////////////////////////
  // Keep the "Preview" tab sync-ed with the "Edit" tab
  /////////////////////////////////////////////////////////////////////////////////////////////
  function updatePreview() {
//    document.getElementById("sponsorLogoPreview").src = document.getElementById("sponsorLogo").value;
//    document.getElementById('sponsorNamePreview').innerHTML = document.getElementById("sponsorName").value;
//    document.getElementById('sponsorDescriptionPreview').innerHTML = document.getElementById("sponsorDescription").value;
//    document.getElementById('sponsorWebsitePreview').innerHTML = document.getElementById("sponsorWebsite").value;
//    document.getElementById('sponsorWebsitePreview').href = document.getElementById("sponsorWebsite").value;
//    document.getElementById('sponsorContactInfoPreview').innerHTML = formatContactInfo();
  }


  //////////////////////////////////////////////////////////////////////
  // Validate the data before submitting the form
  //////////////////////////////////////////////////////////////////////
  function validateData() {
    var dataAreValid = true;  // test for errors below

    //////////////////////////////////////////////////
    // Sponsor Status
    //////////////////////////////////////////////////
    var sponsorStatus = document.getElementById("sponsorStatus").value;
    var sponsorStatusErrors = document.getElementById("sponsorStatusErrors");
    sponsorStatusErrors.innerText = '';  // reset value
    if ( sponsorStatus.length === 0 || sponsorStatus == '0') {
      sponsorStatusErrors.innerText = "Sponsor Active Status cannot be blank.";
    };
    if ( sponsorStatusErrors.innerText.length === 0 ) {  // if no errors, hide the error text
      sponsorStatusErrors.style.display = "none";
    } else {
      sponsorStatusErrors.style.display = "block";
      dataAreValid = false;
    };

    //////////////////////////////////////////////////
    // Sponsor Name
    //////////////////////////////////////////////////
    var sponsorName = document.getElementById("sponsorName").value;
    var sponsorNameErrors = document.getElementById("sponsorNameErrors");
    sponsorNameErrors.innerText = '';  // reset value
    if ( sponsorName.length === 0 ) {
      sponsorNameErrors.innerText = "Sponsor Name cannot be blank.";
    };
    if ( sponsorNameErrors.innerText.length === 0 ) {  // if no errors, add the sponsor
      sponsorNameErrors.style.display = "none";
    } else {
      sponsorNameErrors.style.display = "block";
      dataAreValid = false;
    };

    //////////////////////////////////////////////////
    // Sponsor Description
    //////////////////////////////////////////////////
    var sponsorDescription = document.getElementById("sponsorDescription").value;
    var sponsorDescriptionErrors = document.getElementById("sponsorDescriptionErrors");
    sponsorDescriptionErrors.innerText = '';  // reset value
    if ( sponsorDescription.length === 0 ) {
      sponsorDescriptionErrors.innerText = "Sponsor Description cannot be blank.";
    };
    if ( sponsorDescriptionErrors.innerText.length === 0 ) {  // if no errors, add the sponsor
      sponsorDescriptionErrors.style.display = "none";
    } else {
      sponsorDescriptionErrors.style.display = "block";
      dataAreValid = false;
    };

    //////////////////////////////////////////////////
    // Sponsor Logo
    //////////////////////////////////////////////////
    var sponsorLogo = document.getElementById("sponsorLogo").value;
    var sponsorLogoErrors = document.getElementById("sponsorLogoErrors");
    sponsorLogoErrors.innerText = '';  // reset value
    if ( sponsorLogo.length === 0 ) {
      sponsorLogoErrors.innerText = "Sponsor Logo cannot be blank.";
    };
    if ( sponsorLogoErrors.innerText.length === 0 ) {  // if no errors, add the sponsor
      sponsorLogoErrors.style.display = "none";
    } else {
      sponsorLogoErrors.style.display = "block";
      dataAreValid = false;
    };

    //////////////////////////////////////////////////
    // Sponsor Contact First Name
    //////////////////////////////////////////////////
    // var sponsorContactFName = document.getElementById("sponsorContactFName").value;
    // var sponsorContactFNameErrors = document.getElementById("sponsorContactFNameErrors");
    // sponsorContactFNameErrors.innerText = '';  // reset value
    // if ( sponsorContactFName.length === 0 ) {
    //   sponsorContactFNameErrors.innerText = "Sponsor Contact First Name cannot be blank.";
    // };
    // if ( sponsorContactFNameErrors.innerText.length === 0 ) {  // if no errors, add the sponsor
    //   sponsorContactFNameErrors.style.display = "none";
    // } else {
    //   sponsorContactFNameErrors.style.display = "block";
    //   dataAreValid = false;
    // };

    //////////////////////////////////////////////////
    // Sponsor Contact Last Name
    //////////////////////////////////////////////////
    // var sponsorContactLName = document.getElementById("sponsorContactLName").value;
    // var sponsorContactLNameErrors = document.getElementById("sponsorContactLNameErrors");
    // sponsorContactLNameErrors.innerText = '';  // reset value
    // if ( sponsorContactLName.length === 0 ) {
    //   sponsorContactLNameErrors.innerText = "Sponsor Contact Last Name cannot be blank.";
    // };
    // if ( sponsorContactLNameErrors.innerText.length === 0 ) {  // if no errors, add the sponsor
    //   sponsorContactLNameErrors.style.display = "none";
    // } else {
    //   sponsorContactLNameErrors.style.display = "block";
    //   dataAreValid = false;
    // };

    //////////////////////////////////////////////////
    // Sponsor Contact Email
    //////////////////////////////////////////////////
    var sponsorContactEmail = document.getElementById("sponsorContactEmail").value;
    var sponsorContactEmailErrors = document.getElementById("sponsorContactEmailErrors");
    sponsorContactEmailErrors.innerText = '';  // reset value
    // Email cannot be blank
    if ( sponsorContactEmail.length === 0 ) {
      sponsorContactEmailErrors.innerText += "Sponsor Contact Email cannot be blank. ";
    } else
      // Email must be properly formatted
      if ( !/[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/.test(sponsorContactEmail) ) {
        sponsorContactEmailErrors.innerText += "Sponsor Contact Email must be a proper email address. ";
      };
    // Were errors found?
    if ( sponsorContactEmailErrors.innerText.length === 0 ) {  // if no errors, add the sponsor
      sponsorContactEmailErrors.style.display = "none";
    } else {
      sponsorContactEmailErrors.style.display = "block";
      dataAreValid = false;
    };

    //////////////////////////////////////////////////
    // Sponsor Types
    //////////////////////////////////////////////////
    var sponsorTypes = Array.from(document.getElementById("sponsorTypes").selectedOptions).map(v=>v.value);
    var sponsorTypesFormatted = convertOptionsToDelimitedString(sponsorTypes, "|", "0");
//    alert(sponsorTypesFormatted);
    var sponsorTypesErrors = document.getElementById("sponsorTypesErrors");
    sponsorTypesErrors.innerText = '';  // reset value
    if ( sponsorTypesFormatted === '||' ) {
      sponsorTypesErrors.innerText = "At least one Sponsor Type must be selected.";
    };
    if ( sponsorTypesErrors.innerText.length === 0 ) {  // if no errors, add the sponsor
      sponsorTypesErrors.style.display = "none";
    } else {
      sponsorTypesErrors.style.display = "block";
      dataAreValid = false;
    };

    //////////////////////////////////////////////////
    // If no errors, add the Sponsor
    //////////////////////////////////////////////////
    return dataAreValid;

  } // END: Validate Data


  //////////////////////////////////////////////////////////////////////
  // Confirm the user wants to delete this Sponsor, and process accordingly
  //////////////////////////////////////////////////////////////////////
  function deleteSponsor() {
    var answer = confirm('Are you sure you want to delete this Sponsor?');
    if (answer !== true) {
      return false;
    };
  };  // END: Confirm delete Sponsor


  //////////////////////////////////////////////////////////////////////
  // Format the Sponsor Contact Information for "preview" display
  //////////////////////////////////////////////////////////////////////
  function formatContactInfo() {

    // get the current values
    var contactFName = document.getElementById("sponsorContactFName").value;
    var contactLName = document.getElementById("sponsorContactLName").value;
    var contactEmail = document.getElementById("sponsorContactEmail").value;
    var contactTelephone = document.getElementById("sponsorContactTelephone").value;

    // format them for display in the "Contact Info" section of the Search Results
    var contactInfoFormatted = "";
    if ( contactFName.length > 0 ) {
      contactInfoFormatted = contactFName + " ";
    };
    if ( contactLName.length > 0 ) {
      contactInfoFormatted += contactLName;
    };
    if ( contactEmail.length > 0 ) {
      if ( contactInfoFormatted.length > 0 ) {
        contactInfoFormatted += "<br>";
      };
      contactInfoFormatted += contactEmail;
    };
    if ( contactTelephone.length > 0 ) {
      if ( contactInfoFormatted.length > 0 ) {
        contactInfoFormatted += "<br>";
      };
      contactInfoFormatted += contactTelephone;
    };
    return contactInfoFormatted;
  };  // END: Format Sponsor Contact Name

</script>