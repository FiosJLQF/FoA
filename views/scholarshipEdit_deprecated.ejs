<% layout('layouts/boilerplate') %>

<div class="container pagetitle" align="center">
  Scholarship Information
  <hr class="pagetitlebreak">
</div>

<!-- Flex Grid for Body -->
<div class="container">

  <!-- Search Options -->
  <div class="row">

    <!-- Left-hand Panel: Main Content Menu -->
    <%- include('partials/menu_main') %>

    <!-- Right-hand Panel: Content -->
    <div class="col-9 bodylayout1col2-datamgmt" id="scholarshipsearchresultscolumn">
      <span class="bodylayout1col2title" id="sponsorInstructions"><label>
        Edit the information below, and click "Save Changes"</label></span><br>
      <hr class="bodycol2break"><br>
      <form action="" method="POST">
        <div>
            <label for="scholarshipName" class="data-mgmt">Scholarship Name:</label>
            <input type="text" id="scholarshipName" name="scholarship[ScholarshipName]" class="data-mgmt-text"
              value="<%= scholarshipDetails[0].ScholarshipName %>">
        </div><br>
        <div>
            <label for="scholarshipDescription" class="data-mgmt">Description:</label>
            <textarea id="scholarshipDescription" name="scholarship[ScholarshipDescription]" class="data-mgmt"><%= scholarshipDetails[0].ScholarshipDescription %>
            </textarea> 
        </div><br>
        <div>
          <label for="scholarshipLink" class="data-mgmt">Link:</label>
          <input type="text" id="scholarshipLink" name="scholarship[ScholarshipLink]" class="data-mgmt-text" 
            value="<%= scholarshipDetails[0].ScholarshipLink %>">
      </div><br>
      <div>
        <label for="scholarshipNEXT" class="data-mgmt">...more items...</label>
        <input type="text" id="scholarshipNEXT" name="scholarship[ScholarshipNEXT]" class="data-mgmt" 
          value="">
    </div><br>
    <button class="data-mgmt">Save Changes</button>&nbsp;&nbsp;&nbsp;&nbsp;<button class="data-mgmt">Delete This Scholarship</button>
      </form><br>
    </div>  <!-- End column 2 DIV  -->

  </div>    <!-- End row 1 DIV     -->

  <div class="row">
    <div id="switchboardsidemenu_footer" class="col-3 bodylayout1col1"></div>
    <div id="scholarshipsearchresultscolumn_footer" class="col-9 bodylayout1col2">
      <hr class="bodycol2break">
    </div>
  </div>    <!-- End row 2 DIV     -->

</div>      <!-- End container DIV -->